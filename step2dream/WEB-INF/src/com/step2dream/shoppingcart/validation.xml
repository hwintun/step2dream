<!DOCTYPE validators PUBLIC
        "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
        "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="name">
		<field-validator type="requiredstring">
			<message key="name.requiredstring" />
		</field-validator>
	</field>

	<field name="phone">
		<field-validator type="requiredstring">
			<message key="phone.requiredstring" />
		</field-validator>
	</field>
	
	<field name="address">
		<field-validator type="requiredstring">
			<message key="address.requiredstring" />
		</field-validator>
	</field>
	
	<field name="deliveryCharge">
		<field-validator type="requiredstring">
			<message key="deliveryCharge.requiredstring" />
		</field-validator>
	</field>
</validators>
